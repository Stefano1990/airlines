.row
  .col-lg-12
    .page-header
      %h1 New aircraft configuration
.row
  .col-sm-12
    .row
      = form_for @aircraft_configuration, builder: StandardBuilder, html: { class: "form-horizontal" } do |f|
        = f.error_messages
        .form-group
          = f.text_field :aircraft_type_id, value: @aircraft_configuration.aircraft_type_id, type: 'hidden'
          = f.label :name, class: 'col-sm-2 control-label'
          .col-sm-4= f.text_field :name, class: 'form-control'
          .col-sm-2
            %input#first-seats.control-label.form-control{ type: 'number' }
        .form-group
          = f.label :first_seats, class: 'col-sm-2 control-label'
          .col-sm-4= f.text_field :first_seats, class: 'form-control', type: 'number'
          .col-sm-2
            %input#business-seats.control-label.form-control{ type: 'number' }
        .form-group
          = f.label :business_seats, class: 'col-sm-2 control-label'
          .col-sm-4= f.text_field :business_seats, class: 'form-control', type: 'number'
        .form-group
          = f.label :economy_seats, class: 'col-sm-2 control-label'
          .col-sm-4= f.text_field :economy_seats, class: 'form-control', type: 'number'
        .form-group
          = f.submit 'Create configuration', class: 'btn btn-success'
